Header set Content-Security-Policy "default-src 'none'; base-uri 'self'; script-src 'self' 'unsafe-inline'; style-src 'self'; img-src 'self' data:; font-src 'self'; connect-src 'self'; form-action 'self'; frame-ancestors 'none'; object-src 'none'; upgrade-insecure-requests" 

Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"


AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg

# --- Extra hardening (recommended) ---
Header set X-Content-Type-Options "nosniff"
Header set Referrer-Policy "strict-origin-when-cross-origin"
Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), fullscreen=(self)"
Header set X-Frame-Options "DENY"
